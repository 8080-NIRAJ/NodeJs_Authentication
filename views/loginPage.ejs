<link rel="stylesheet" href="/css/login.css">
<form action="/signin" class="signupContainer" method="post">
    <h1 class="signupHeading"><i class="fa-solid fa-right-to-bracket fa-beat-fade"></i>
        Login</h1>

    <div class="inputInfo">
        <input class="inputField" type="text" name="email" placeholder='Enter Your Email' />
    </div>
    <div class="inputInfo">
        <input class="inputField" type="text" name="password" placeholder='Enter Your Password' />
    </div>
    <div class="bottonnContainer">
        <button class="button" type="submit">Login</button>
    </div>
    <div>
        <p class="singupRef">Don't have an account <a href="/">Signup</a></p>
      
        
    </div>
    <div>
        <p> <a href="/reset">Reset Password</a></p>
    </div>

    <div class="hr">
        <span class="span1">__________________</span>
        <span class="spanor">Or</span>
        <span class="span2">__________________</span>
    </div>
    <div class="bottonnContainer">
        <div class="googleContainer">
            <img class="gimg" src="https://img.icons8.com/color/1x/google-logo.png" alt="" />
            <a class="glink" href="/auth/google">Login with google</a>
        </div>
    </div>
</form>
