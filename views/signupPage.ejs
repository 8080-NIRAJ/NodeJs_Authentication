<link rel="stylesheet" href="/css/signup.css">
<form action="/signup" method="post" class="signupContainer">
    <h1 class="signupHeading"><i class="fa-solid fa-right-to-bracket fa-beat-fade"></i>
        Signup</h1>
    <div class="inputInfo">
        <input class="inputField" type="text" name="name" placeholder='Enter Your Name' />
    </div>
    <div class="inputInfo">
        <input class="inputField" type="text" name="email" placeholder='Enter Your Email' />
    </div>
    <div class="inputInfo">
        <input class="inputField" type="password" name="password" placeholder='Enter  Password' />
    </div>
    <div class="inputInfo">
        <input class="inputField" type="password" name="confirmPassword" placeholder=' Confirm Password' />

    </div>
    <div class="bottonnContainer">
        <button type="submit" class="button">Signup</button>
    </div>
    <div>
        <p class="loginRef">Already have an account <a href="/login">Login</a></p>
    </div>
    <div class="hr">
        <span class="span1">__________________</span>
        <span class="spanor">Or</span>
        <span class="span2">__________________</span>
    </div>
    <div class="bottonnContainer">

        <div class="googleContainer">
            <img class="gimg" src="https://img.icons8.com/color/1x/google-logo.png" alt="google-logo" />
            <a class="glink " href="/auth/google">Login with Google</a>
        </div>

    </div>
</form>

